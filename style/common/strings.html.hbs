<style>
    html {
        string-set:
        top-right
        {{#if top_right}}
            '{{top_right}}'
        {{else}}
            {{#if short_title}}
                '{{short_title}}. — '
            {{else}}
                {{#if type}}
                    '{{capitalize type}}. — '
                {{/if}}
            {{/if}}
            {{#if author}}
                '{{{marked author.name}}}'
            {{/if}}
            {{#if top_right_date}}
                ', {{top_right_date}}'
            {{/if}}
        {{/if}},
        bottom-left
        {{#if bottom_left}}
            '{{bottom_left}}'
        {{else}}
            'Издание: аюм/'
            {{#if title_slug}}
                '{{title_slug}}'
            {{/if}}
            '/'
            {{#if publication_date}}
                '{{dateFormatShort publication_date}}'
            {{else}}
                {{#if date}}
                    '{{dateFormatShort date}}'
                {{/if}}
            {{/if}}
            '/' '{{git_commit}}'
        {{/if}};
    }
</style>